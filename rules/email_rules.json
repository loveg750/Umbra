[
  {
    "id": "EMAIL-CEO-WIRE-FRAUD",
    "name": "CEO wire transfer fraud attempt",
    "description": "Email pretending to be from the CEO with an urgent wire transfer request, often from a lookalike domain.",
    "severity": "critical",
    "log_type": "email",
    "dialect": "generic",
    "conditions": [
      { "field": "subject", "operator": "contains", "value": "Wire transfer" },
      { "field": "filter_action", "operator": "in", "value": ["quarantined", "blocked"] }
    ],
    "tags": ["email", "bec", "fraud", "dialect"],
    "mitre": ["T1589", "T1566"]
  },
  {
    "id": "EMAIL-MFA-RESET-LURE",
    "name": "Suspicious MFA reset lure",
    "description": "Email urging the user to reset MFA via an external link with mismatched domain.",
    "severity": "high",
    "log_type": "email",
    "dialect": "generic",
    "conditions": [
      { "field": "subject", "operator": "contains", "value": "Reset your MFA" },
      { "field": "filter_action", "operator": "equals", "value": "blocked" }
    ],
    "tags": ["email", "phishing", "account_takeover", "dialect"],
    "mitre": ["T1566", "T1110"]
  },
  {
    "id": "EMAIL-GENERIC-INVOICE-PHISH",
    "name": "Generic invoice phishing with executable attachment",
    "description": "Email pretending to be an invoice with vague subject and potentially malicious executable attachment.",
    "severity": "high",
    "log_type": "email",
    "dialect": "generic",
    "conditions": [
      { "field": "subject", "operator": "contains", "value": "invoice" },
      { "field": "notes", "operator": "contains", "value": "malicious attachment" }
    ],
    "tags": ["email", "malware", "phishing", "dialect"],
    "mitre": ["T1566", "T1204"]
  },
  {
    "id": "EMAIL-PAYMENT-UPDATE-PHISH",
    "name": "Payment update phishing email",
    "description": "Email asking user to update payment card details on a fake payment portal.",
    "severity": "high",
    "log_type": "email",
    "dialect": "generic",
    "conditions": [
      { "field": "subject", "operator": "contains", "value": "Payment failed" },
      { "field": "filter_action", "operator": "equals", "value": "quarantined" }
    ],
    "tags": ["email", "phishing", "credential_harvest", "dialect"],
    "mitre": ["T1566"]
  },

  {
    "id": "EMAIL_PHISH_SCORE_HIGH_01",
    "name": "High phishing score (normalized)",
    "log_type": "email",
    "dialect": "score_based",
