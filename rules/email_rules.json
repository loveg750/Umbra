    "mitre": ["T1566"],
    "tags": ["email", "phishing", "dialect", "scoring"],
    "conditions": [
      { "field": "phish_score", "operator": "greater_than", "value": 0.8 }
    ]
  },
  {
    "id": "EMAIL_SPAM_SCORE_HIGH_01",
    "name": "High spam score (normalized)",
    "log_type": "email",
    "dialect": "score_based",
    "severity": "medium",
    "description": "Email has a high spam score, which may also indicate phishing or malicious content.",
    "mitre": ["T1566"],
    "tags": ["email", "spam", "phishing", "dialect"],
    "conditions": [
      { "field": "spam_score", "operator": "greater_than", "value": 0.8 }
    ]
  },
  {
    "id": "EMAIL_SUSPICIOUS_ATTACHMENT_EXTENSION_01",
    "name": "Suspicious attachment type",
    "log_type": "email",
    "dialect": "generic",
    "severity": "high",
    "description": "Email contains an attachment with a commonly abused executable or macro-enabled extension.",
    "mitre": ["T1566", "T1204"],
    "tags": ["email", "attachment", "malware", "dialect"],
    "conditions": [
      {
        "field": "attachment_extension",
        "operator": "in",
        "value": [".exe", ".js", ".vbs", ".scr", ".ps1", ".bat", ".cmd", ".docm", ".xlsm"]
      }
    ]
  },
  {
    "id": "EMAIL_EXTERNAL_SPOOFED_BRAND_01",
    "name": "External login or payment lure",
    "log_type": "email",
    "dialect": "generic",
    "severity": "high",
    "description": "External sender with a subject consistent with credential theft or payment fraud.",
    "mitre": ["T1566"],
    "tags": ["email", "phishing", "brand-impersonation", "dialect"],
    "conditions": [
      { "field": "is_external", "operator": "equals", "value": true },
      { "field": "subject", "operator": "contains", "value": "account" }
    ]
  },
  {
    "id": "EMAIL_DMARC_SPF_FAIL_01",
    "name": "DMARC/SPF authentication failure",
    "log_type": "email",
    "dialect": "auth_result",
    "severity": "medium",
