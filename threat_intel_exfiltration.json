[
  {
    "id": "EXF-TI-001",
    "name": "Large Transfer to Unapproved Cloud Storage",
    "description": "Bulk data upload to an unapproved external storage provider.",
    "severity": "critical",
    "log_type": "exfiltration",
    "conditions": [
      {
        "field": "destination",
        "operator": "equals",
        "value": "fileshare-example.net"
      },
      {
        "field": "file_size_mb",
        "operator": "greater_than",
        "value": 100
      }
    ],
    "mitre": ["T1567"],
    "tags": ["threat_intel", "bulk_exfiltration"]
  },
  {
    "id": "EXF-TI-002",
    "name": "Stealthy Trickle Exfiltration Pattern",
    "description": "Multiple small file transfers to the same destination over a long period (low-and-slow exfiltration behavior).",
    "severity": "high",
    "log_type": "exfiltration",
    "conditions": [
      {
        "field": "transfer_count_last_24h",
        "operator": "greater_than",
        "value": 30
      },
      {
        "field": "avg_file_size_mb",
        "operator": "less_than",
        "value": 5
      }
    ],
    "mitre": ["T1041"],
    "tags": ["threat_intel", "low_and_slow"]
  },
  {
    "id": "EXF-TI-003",
    "name": "Exfiltration via Email Attachment",
    "description": "High-volume attachments sent to external domain, unusual for this user.",
    "severity": "medium",
    "log_type": "exfiltration",
    "conditions": [
      {
        "field": "channel",
        "operator": "equals",
        "value": "email"
      },
      {
        "field": "external_domain",
        "operator": "equals",
        "value": "external-recipient-example.com"
      },
      {
        "field": "attachment_count_last_1h",
        "operator": "greater_than",
        "value": 10
      }
    ],
    "mitre": ["T1567", "T1071"],
    "tags": ["threat_intel", "email_exfiltration"]
  }
]
